@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "_AuthLayout";
}
<p class="mb-4">Please sign-in to your account and start the adventure</p>

<form class="mb-3" method="POST">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">Email</label>
        <input asp-for="Input.Email" type="text" class="form-control" autocomplete="username" aria-required="true" placeholder="Enter your email" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="mb-3 form-password-toggle">
        <div class="d-flex justify-content-between">
            <label asp-for="Input.Password" class="form-label">Password</label>
            <a asp-page="./ForgotPassword">
                <small>Forgot Password?</small>
            </a>
        </div>
        <div class="input-group input-group-merge">           
            <input asp-for="Input.Password" id="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
            <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
        </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" />
            <label asp-for="Input.RememberMe" class="form-check-label" for="remember-me"> Remember Me </label>
        </div>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary d-grid w-100" type="submit">Sign in</button>
    </div>    
</form>

<p class="text-center">
    <span>New on our platform?</span>
    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
        <span>Create an account</span>
    </a>
</p>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
